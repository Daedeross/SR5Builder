<UserControl x:Class="SR5Builder.Views.SkillsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:SR5Builder.Views"
             xmlns:xtk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="300">
    <Grid>
        <TabControl>
            <TabItem Header="SkillGroups">
                <views:SkillGroupView DataContext="{Binding}" />
            </TabItem>
            <TabItem Header="Active Skills">
                <views:ActiveSkillsView DataContext="{Binding}" />
            </TabItem>
            <TabItem Header="Knowledge Skills">
                
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>